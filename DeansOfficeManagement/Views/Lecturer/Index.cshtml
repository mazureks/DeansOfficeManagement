@model DeansOfficeManagement.Models.ViewModels.LecturerDashboardViewModel
@{
    ViewBag.Title = "Panel Wykładowcy";
}

<h1>Witamy w panelu wykładowcy !</h1>

<div class="container mt-4">
    <div class="row">

        <!-- Sekcja Przypisanych Kursów -->
        <div class="col-md-8">
            <h3>Moje Kursy</h3>
            <div class="row">
                @foreach (var course in Model.Courses)

                {
                    <div class="col-md-6 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">@course.CourseName</h5>
                                <p class="card-text">Punkty ECTS: @course.Credits</p>
                                <p class="card-text">Zapisani Studenci: @course.CourseRegistrations.Count</p>
                                <a href="@Url.Action("GradeInput", "Lecturer", new { courseId = course.CourseId })" class="btn btn-primary">Wprowadź Oceny</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Sekcja Szybkich Akcji -->
        <div class="col-md-4">
            <h3>Szybkie Akcje</h3>
            <div class="list-group">
                <a asp-action="Courses" class="list-group-item list-group-item-action">Moje Kursy</a>
            </div>
        </div>
    </div>

