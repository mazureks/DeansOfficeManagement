@model Course
@{
    ViewBag.Title = "Edytuj kurs";
}

<h2>Edytuj kurs</h2>

<form asp-action="EditCourse" method="post">
    <input type="hidden" asp-for="CourseId" />

    <div class="form-group">
        <label asp-for="CourseName">Nazwa kursu</label>
        <input asp-for="CourseName" class="form-control" />
        <span asp-validation-for="CourseName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Credits">Punkty ECTS</label>
        <input asp-for="Credits" type="number" class="form-control" />
        <span asp-validation-for="Credits" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Przypisz wykładowcę</label>
        <select asp-for="LecturerId" class="form-control" asp-items="@(ViewBag.Lecturers)">
            <option value="">Wybierz wykładowcę</option>
        </select>
        <span asp-validation-for="LecturerId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
    <a asp-action="Courses" class="btn btn-secondary">Anuluj</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
