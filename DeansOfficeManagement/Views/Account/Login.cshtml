@model DeansOfficeManagement.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Logowanie";
}

<h2>Logowanie</h2>

<form asp-action="Login" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Email">Adres e-mail</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password">Hasło</label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="RememberMe" class="form-check-input" />
        <label asp-for="RememberMe" class="form-check-label">Zapamiętaj mnie</label>
    </div>

    <button type="submit" class="btn btn-primary">Zaloguj się</button>
</form>
