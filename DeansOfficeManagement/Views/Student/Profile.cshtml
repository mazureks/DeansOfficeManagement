@model DeansOfficeManagement.Models.ApplicationUser

@{
    ViewData["Title"] = "Mój Profil";
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Mój Profil</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Mój Profil</h2>

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Informacje Osobiste</h5>

                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Imię:</strong> @Model.FirstName</p>
                        <p><strong>Nazwisko:</strong> @Model.LastName</p>
                        <p><strong>Email:</strong> @Model.Email</p>
                        <p><strong>Numer Telefonu:</strong> @Model.PhoneNumber</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Numer Studenta:</strong> @Model.StudentNumber</p>
                    </div>
                </div>

                <!-- <a href="#" class="btn btn-primary mt-3">Edytuj Profil</a>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS i zależności -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>