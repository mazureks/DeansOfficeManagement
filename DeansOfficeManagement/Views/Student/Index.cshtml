@{
    ViewData["Title"] = "Panel Studenta";
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Panel Studenta</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .dashboard-container {
            margin-top: 50px;
        }

        .dashboard-card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

            .dashboard-card:hover {
                transform: scale(1.05);
            }

        .dashboard-header {
            background-color: #007bff;
            color: white;
            padding: 15px;
            border-radius: 5px;
        }

        .icon {
            font-size: 40px;
            color: #007bff;
        }

        .footer {
            margin-top: 50px;
            text-align: center;
            font-size: 14px;
            color: #777;
        }
    </style>
</head>
<body>
    <div class="container dashboard-container">
        <div class="dashboard-header text-center">
            @*@<h1>Witamy w twoim panelu, @User.Identity.Name !</h1> *@
            <h1>Witamy w Twoim Panelu, @ViewBag.FirstName!</h1>
            <p>Twoje centrum do wszystkich potrzeb akademickich i administracyjnych.</p>
        </div>

        <div class="row mt-5">
            <!-- Karta Profilu -->
            <div class="col-md-4">
                <div class="card dashboard-card">
                    <div class="card-body text-center">
                        <i class="icon fas fa-user-graduate"></i>
                        <h5 class="card-title mt-3">Mój Profil</h5>
                        <p class="card-text">Przeglądaj i aktualizuj swoje dane osobowe.</p>
                        <a href="@Url.Action("Profile", "Student")" class="btn btn-primary">Przejdź do Profilu</a>
                    </div>
                </div>
            </div>

            <!-- Karta Rejestracji Kursów -->
            <div class="col-md-4">
                <div class="card dashboard-card">
                    <div class="card-body text-center">
                        <i class="icon fas fa-clipboard-list"></i>
                        <h5 class="card-title mt-3">Rejestracja na Kursy</h5>
                        <p class="card-text">Przeglądaj dostępne kursy i rejestruj się na bieżący semestr.</p>
                        <a href="@Url.Action("RegisterCourse", "Student")" class="btn btn-primary">Zarejestruj Się</a>
                    </div>
                </div>
            </div>
            <!-- Karta Podglądu Ocen -->
            <div class="col-md-4">
                <div class="card dashboard-card">
                    <div class="card-body text-center">
                        <i class="icon fas fa-graduation-cap"></i>
                        <h5 class="card-title mt-3">Moje Oceny</h5>
                        <p class="card-text">Przeglądaj oceny dla swoich zarejestrowanych kursów.</p>
                        <a href="@Url.Action("GradeOverview", "Student")" class="btn btn-primary">Zobacz Oceny</a>
                    </div>
                </div>
            </div>

            <!-- Karta Wniosków -->
            <div class="col-md-4">
                <div class="card dashboard-card">
                    <div class="card-body text-center">
                        <i class="fas fa-envelope icon"></i> <!-- Upewnij się, że Font Awesome jest poprawnie załączone -->
                        <h5 class="card-title mt-3">Moje Wnioski</h5>
                        <p class="card-text">Składaj i przeglądaj swoje wnioski akademickie.</p>
                        <a href="@Url.Action("ViewRequests", "Student")" class="btn btn-primary">Zobacz Wnioski</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card dashboard-card">
                    <div class="card-body text-center">
                        <i class="icon fas fa-envelope"></i>
                        <h5 class="card-title mt-3">Złóż Wniosek</h5>
                        <p class="card-text">Złóż wniosek do dziekanatu.</p>
                        <a href="@Url.Action("SubmitRequest", "Student")" class="btn btn-primary">Złóż Wniosek</a>
                    </div>
                </div>
            </div>

        </div>

        <div class="footer mt-5">
            <p>&copy; @DateTime.Now.Year Dziekanat - Portal Studenta. Wszelkie prawa zastrzeżone.</p>
        </div>
    </div>

    <!-- Font Awesome dla ikon -->
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <!-- Bootstrap JS i zależności -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
